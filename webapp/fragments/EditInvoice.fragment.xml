<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<Dialog title="EDIT DETAILS" contentHeight="30%" contentWidth="25%" verticalScrolling="false">
		<content>
			<l:VerticalLayout class="sapUiResponsiveContentPadding " width="100%">
				<Label text="Invoice No:"/>
				<Input value="{detailViewModel>/details/InvoiceNo}"/>
				<Label text="Invoice Date:"/>
				<DatePicker dateValue="{detailViewModel>/details/InvoiceDate}"/>
			</l:VerticalLayout>
		</content>
		<buttons>
			<Button text="Apply" press="onPressApply" type="Emphasized" />
			<Button text="Cancel" press="onPressCloseDialog" type="Reject"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>